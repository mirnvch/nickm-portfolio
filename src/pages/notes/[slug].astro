---
import BlogPost from '../../components/BlogPost.astro';
import { getPostSlugsByType, getPost } from '../../data/posts';

export function getStaticPaths() {
  return getPostSlugsByType('en', 'personal').map(slug => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const post = getPost('en', slug!);

if (!post) {
  return Astro.redirect('/404');
}
---

<BlogPost lang="en" post={post} slug={slug!} type="personal" />
