---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 — Page Not Found">
  <div class="flex flex-col items-center justify-center gap-6 py-20 text-center">
    <h1 class="font-cormorant text-6xl font-semibold text-foreground">404</h1>
    <p class="text-muted-foreground text-lg">This page doesn't exist.</p>
    <a
      href="/"
      class="text-gold hover:text-bronze transition-colors text-sm"
    >
      ← Back to Home
    </a>
  </div>
</Layout>
