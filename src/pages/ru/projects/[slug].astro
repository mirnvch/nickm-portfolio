---
import ProjectPage from '../../../components/ProjectPage.astro';
import { getProjectSlugs, getProject } from '../../../data/projects';

export function getStaticPaths() {
  return getProjectSlugs('ru').map(slug => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const project = getProject('ru', slug!);

if (!project) {
  return Astro.redirect('/404');
}
---

<ProjectPage lang="ru" project={project} />
