---
import BlogPost from '../../../components/BlogPost.astro';
import { getPostSlugsByType, getPost } from '../../../data/posts';

export function getStaticPaths() {
  return getPostSlugsByType('ru', 'personal').map(slug => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const post = getPost('ru', slug!);

if (!post) {
  return Astro.redirect('/404');
}
---

<BlogPost lang="ru" post={post} slug={slug!} type="personal" />
