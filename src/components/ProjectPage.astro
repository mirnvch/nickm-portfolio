---
import Layout from '../layouts/Layout.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { useTranslations, getLocalePath } from '../i18n/utils';
import type { Locale } from '../i18n/utils';
import type { Project } from '../data/projects';

interface Props {
  lang: Locale;
  project: Project;
}

const { lang, project } = Astro.props;
const t = useTranslations(lang);
const homePath = getLocalePath(lang, '/');

const statusLabels: Record<string, string> = {
  prototype: t('statusPrototype'),
  development: t('statusDevelopment'),
  active: t('statusActive'),
};

const siteName = lang === 'ru' ? 'Ник Миранович' : 'Nick Miranovich';
---

<Layout title={`${project.title} • ${siteName}`} description={project.description} lang={lang}>
  <!-- Header -->
  <header class="flex items-center justify-between w-full">
    <a href={homePath} class="text-muted-foreground hover:text-foreground transition-colors text-sm">
      {t('backToHome')}
    </a>
    <LanguageSwitcher lang={lang} />
  </header>

  <!-- Project -->
  <article class="flex flex-col gap-y-6">
    <header class="flex flex-col gap-y-3">
      <h1 class="font-cormorant text-3xl font-semibold text-foreground">
        {project.title}
      </h1>

      <div class="flex flex-wrap items-center gap-3 text-sm">
        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-card text-muted-foreground">
          {statusLabels[project.status]}
        </span>
        {project.link && (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gold hover:text-bronze transition-colors"
          >
            {t('visitWebsite')}
          </a>
        )}
      </div>
    </header>

    <!-- Tech Stack -->
    <div class="flex flex-col gap-y-2">
      <h2 class="text-sm font-medium text-muted-foreground uppercase tracking-wide">
        {t('techStack')}
      </h2>
      <div class="flex flex-wrap gap-2">
        {project.tech.map((item) => (
          <span class="px-2.5 py-1 rounded-md text-xs bg-card text-foreground">
            {item}
          </span>
        ))}
      </div>
    </div>

    <!-- Content -->
    <div class="prose prose-lg" set:html={project.content} />
  </article>
</Layout>
